<% provide(:title, "Change password") %>
<div class="container">
    <div class="row justify-content-center">      
          <hr>        
    </div>
    <div class="row justify-content-center">      
          <h1> Change your Schwab password </h1>        
    </div>
    <div class="row justify-content-center">      
          <hr>        
    </div>
     <div class="row">      
          <p>We recommend you to change your password.</p>
          <hr>
    </div>
    


<div class="row ">
<div class="col-12 col-md-8">
<form>
  <div class="form-group row">
    <label for="inputPassword" class="col-sm-6 col-form-label">Old Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword" placeholder="">
    </div>
  </div>
  
    <div class="form-group row">
    <label for="inputPassword" class="col-sm-6 col-form-label">New Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword" placeholder="">
    </div>
  </div>
  
    <div class="form-group row">
    <label for="inputPassword" class="col-sm-6 col-form-label">Re-enter New Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword" placeholder="">
    </div>
  </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>

<div class="col-6 col-md-4">
  <p> Password Rules:</p>
  <ul class="list-group list-group-flush">
  <li class="list-group-item">Must be at least 8 characters in length</li>
  <li class="list-group-item">Must have at least one letter and one number</li>
  <li class="list-group-item">Cannot start with a number</li>

</ul>
  
</div>
</div>